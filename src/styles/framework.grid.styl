//- https://flexgridlite.elliotdahl.com/

.grid
  box-sizing border-box
  display flex
  flex 0 1 auto
  flex-direction row
  flex-wrap wrap
  &.grid-noborders
    margin 0 $margin-standard * -1
  &.grid-nogutter
    margin 0
  &.grid-nogutter,
  &.grid-noborders
    & > .col
      padding 0

.grid-start
  justify-content flex-start

.grid-center
  justify-content center

.grid-end
  justify-content flex-end

.grid-around
  justify-content space-around

.grid-between
  justify-content space-between

.grid-reverse
  flex-direction row-reverse

.col
  box-sizing border-box
  flex-grow 1
  flex-shrink 0
  flex-basis 100%
  padding 0 $margin-standard

.col-align-top
  align-self flex-start

.col-align-bottom
  align-self flex-end

.col-align-middle
  align-self center

.col-top
  justify-content flex-start !important
  flex-direction column
  display flex

.col-bottom
  justify-content flex-end !important
  flex-direction column
  display flex

.col-middle
  justify-content center
  flex-direction column
  display flex

.col-first
  order -1

.col-last
  order 1

.col-fixed
  flex initial

.col-grow-1
  flex-grow 1

.col-grow-2
  flex-grow 2

.col-grow-3
  flex-grow 3

.col-grow-4
  flex-grow 4

.col-grow-5
  flex-grow 5

.col-grow-6
  flex-grow 6

.col-grow-7
  flex-grow 7

.col-grow-8
  flex-grow 8

.col-grow-9
  flex-grow 9

.col-grow-10
  flex-grow 10

.col-grow-11
  flex-grow 11

.col-grow-12
  flex-grow 12

.col-1
  flex-basis 8.33333%
  max-width 8.33333%

.col-2
  flex-basis 16.66667%
  max-width 16.66667%

.col-3
  flex-basis 25%
  max-width 25%

.col-4
  flex-basis 33.33333%
  max-width 33.33333%

.col-5
  flex-basis 41.66667%
  max-width 41.66667%

.col-6
  flex-basis 50%
  max-width 50%

.col-7
  flex-basis 58.33333%
  max-width 58.33333%

.col-8
  flex-basis 66.66667%
  max-width 66.66667%

.col-9
  flex-basis 75%
  max-width 75%

.col-10
  flex-basis 83.33333%
  max-width 83.33333%

.col-11
  flex-basis 91.66667%
  max-width 91.66667%

.col-12
  flex-basis 100%
  max-width 100%

@media screen and (min-width: 768px)
  .col
    columns = 2
    gutters-size = (columns + 1) * 15
    flex-basis "calc(calc(100% - %spx - 18px) / %s)" % (gutters-size columns)

@media screen and (min-width: 1024px)
  .col
    columns = 3
    gutters-size = (columns + 1) * 15
    flex-basis "calc(calc(100% - %spx - 18px) / %s)" % (gutters-size columns)

@media screen and (min-width: 1440px)
  .col
    columns = 4
    gutters-size = (columns + 1) * 15
    flex-basis "calc(calc(100% - %spx - 18px) / %s)" % (gutters-size columns)

@media screen and (min-width: 1920px)
  .col
    columns = 6
    gutters-size = (columns + 1) * 15
    flex-basis "calc(calc(100% - %spx - 18px) / %s)" % (gutters-size columns)
